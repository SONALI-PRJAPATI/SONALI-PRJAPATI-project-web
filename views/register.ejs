<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw]  bg-white px-6 py-10 rounded-[30px]">
      <h1 class=" text-3xl mb-10 mt-2 font-semibold text-zinc-700 tracking-tighter capitalize leading-none text-center">Create New Account</h1>
      <form action="/register" method="post">
       <input class=" border-2 rounded-md block mt-2 w-[20vw] px-3 py-2 ml-10" type="text" name="username" placeholder="username">
       <input class=" border-2 rounded-md block mt-2 w-[20vw] px-3 py-2 ml-10" type="text" name="lastname" placeholder="lastname">
       <input class=" border-2 rounded-md block mt-2 w-[20vw] px-3 py-2 ml-10" type="email" name="email" placeholder="email">
       <input class=" border-2 rounded-md block mt-2 w-[20vw] px-3 py-2 ml-10" type="number" name="contact" placeholder="contact">
       <input class=" border-2 rounded-md block mt-2 w-[20vw] px-3 py-2 ml-10" type="password" name="password" placeholder="password">
       <input class=" border-2 rounded-full block  mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
      </form>
       <a class="inline-block mt-6 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing account</a>
   </div>
   </div>
<% include ./partials/footer.ejs %>